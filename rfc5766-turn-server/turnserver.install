post_install() {
  id turnserver &>/dev/null || \
    useradd -g daemon -M -s /usr/bin/false turnserver

  install -dm 755 "/var/log/turnserver"
  chown -R turnserver:daemon /var/log/turnserver

  systemd-tmpfiles --create turnserver.conf
}

post_upgrade() {
  post_install
}

pre_remove() {
  userdel turnserver
}
