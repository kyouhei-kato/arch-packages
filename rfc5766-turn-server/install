post_install() {
  if [ ! `grep turnserver /etc/group` ]; then
    groupadd turnserver &>/dev/null;
  fi

  id turnserver &>/dev/null || \
    useradd -g turnserver -d /usr/share/turnserver -s /usr/bin/false turnserver

  chown -R turnserver:turnserver /var/log/turnserver
}

post_upgrade() {
  post_install
}

pre_remove() {
  userdel openfire &> /dev/null
  groupdel openfire &> /dev/null
}